{
    "name": "kong-test-cypress",
    "version": "1.0.0",
    "description": "Kong UI Automation Testing Project - Using Cypress + TypeScript (Recommended: Native Method)",
    "main": "index.js",
    "scripts": {
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "cy:run:chrome": "cypress run --browser chrome",
        "cy:run:firefox": "cypress run --browser firefox",
        "cy:run:headed": "cypress run --headed",
        "test": "cypress run",
        "test:headed": "cypress run --headed --browser chrome",
        "test:report": "npm run report:clean && npm run cy:run && npm run report:generate && npm run report:open",
        "test:full": "node scripts/run-tests.js",
        "test:e2e": "npm run setup && npm run cy:run && npm run teardown:auto",
        "setup": "node scripts/setup.js",
        "teardown": "node scripts/teardown.js",
        "teardown:auto": "node scripts/teardown-auto.js",
        "cleanup": "node scripts/cleanup.js",
        "report:clean": "node scripts/clean-reports.js",
        "report:generate": "node scripts/generate-report.js",
        "report:open": "node scripts/open-report.js",
        "setup:bash": "bash scripts/setup.sh",
        "teardown:bash": "bash scripts/teardown.sh",
        "cleanup:bash": "bash scripts/force-cleanup.sh",
        "docker:build": "node scripts/docker-build.js",
        "docker:test": "node scripts/docker-run.js",
        "docker:test:full": "node scripts/docker-test-full.js"
    },
    "keywords": [
        "cypress",
        "typescript",
        "e2e",
        "ui-testing",
        "automation"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "cypress": "^13.6.0",
        "mochawesome": "^7.1.4",
        "mochawesome-merge": "^5.0.0",
        "mochawesome-report-generator": "^6.3.0",
        "typescript": "^5.3.0"
    }
}
